<%= render 'post', post: @post %>
<% if @post.user.id == current_user.id %>
  <div class="text-center edit-links">
    <%= link_to 'Cancel', posts_path %>
    |
    <%= link_to 'Edit', edit_post_path(@post) %>
    |
    <%= link_to 'Delete', post_path(@post), 
          method: :delete, 
          data: { confirm: 'Are you sure?' } %>
  </div>
<% else %>
  <div class="text-center edit-links">
    <%= link_to "Cancel", posts_path %>
  </div>
<% end %>
